

<head>
  <title>Add New listing</title>
</head>
<% layout('tamp/bolierplate.ejs') -%> 
<body>
    
   

    
  <div class="con">
    <h2>Create a New Listing</h2>
    <form method="post" action="/listing" class="form-floating needs-validation" novalidate>
        <div class="form-floating mb-3">
            
            <input type="text" name="listing[title]" placeholder="Enter your title" class="form-control" id="floatingInput" required>
            <label for="floatingInput">Title for Listing</label> 
            <div class="invalid-feedback">
                Please choose a Title
              </div>
        </div>
        <br>
        <div class="form-floating">
           
            <textarea style="height: 20rem;" id="floatingTextarea"class="form-control" name="listing[description]" id="description" cols="30" rows="10" placeholder="Enter listing description" required></textarea>
            <label for="floatingTextarea">Discription</label> 
            <div class="invalid-feedback">
                Please Write A description
              </div>
        </div>
        <br>
        <div class="form-floating">
            <input id="url" class="form-control" type="text" name="listing[image.url]" id="image" placeholder="Enter image url/link">
            <label for="url">Image URL/link</label> 
        </div>
        <br>
        <div class="form-floating">
            <input id="floatingPrice" class="form-control" type="number" name="listing[price]" id="price" required>
            <label for="floatingPrice">Enter price</label>
            <div class="invalid-feedback">
                Please choose price
              </div> 
        </div>
        <br>
        
            
              <div class="row justify-content-start">
                <div class="form-floating col-3" >
                    <input  id="floatingInput" class="form-control" type="text" name="listing[location]" placeholder="Enter your location" required>
                    <label for="floatingInput"  class="offset-1">Location</label> 
                    <div class="invalid-feedback">
                        Please choose a Location
                      </div>
                    </div>
               
                
                
                <div class="form-floating col">
                    <input  id="floatingcountry" class=" p-3 w-100 form-control offset-0" type="text" name="listing[country]" placeholder="Enter your country" required>
                    <label for="floatingcountry" class="ml-3 offset-1"  >Country</label>
                 </div>
            
              </div>
        
        
        <br>
       <button type="submit button" class="btn btn-dark" >Add </button>
       <br>
       <br>
    </form>
    <br>
        
  </div>

  

</body>